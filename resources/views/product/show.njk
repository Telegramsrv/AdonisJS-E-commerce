                                            <option value="{{wishlist.id}}">{{wishlist.title}}</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                    {{ form.submit('ADD TO WISH', 'publish', { class: 'btn btn-primary btn-block btn-rose' }) }}
                                    {{ form.close() }}
                                {% endif %}
