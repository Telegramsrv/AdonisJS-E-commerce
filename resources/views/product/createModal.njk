<div class="overlay2 overlay-scale">
<button type="button" class="overlay-close2">Close</button>
<div class="container" style="top: 6em;
    position: relative;">

{{ form.open({action: 'ProductController.store', files:true}) }}

    {{ csrfField }}

    <fieldset class="form-group">
      {{ form.label('Product Title') }}
      {{ form.text('title', null, { class: 'form-control' }) }}
    </fieldset>

    <fieldset class="form-group">
      {{ form.label('Description') }}
      {{ form.textarea('description', null, { class: 'form-control' }) }}
    </fieldset>
    <div class="row">
    <div class="col-md-6">
     <fieldset class="form-group">
      {{ form.label('SKU') }}
      {{ form.text('SKU', null, { class: 'form-control' }) }}
    </fieldset>
    </div>
    <div class="col-md-6">
     <fieldset class="form-group">
      {{ form.label('Price') }}
      {{ form.text('price', null, { class: 'form-control' }) }}
    </fieldset>
    </div>
    </div>
    <div class="fileinput fileinput-new" data-provides="fileinput">
        <div class="fileinput-new thumbnail" style="width: 600px; height: 250px;">
          <img data-src="holder.js/100%x100%" alt="">
        </div>
        <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 600px; max-height: 450px;"></div>
          <div>
            <span class="btn btn-default btn-file"><span class="fileinput-new">Select image</span><span class="fileinput-exists">Change</span><input type="file" name="imagem"></span>
            <a href="#" class="btn btn-default fileinput-exists" data-dismiss="fileinput">Remove</a>
          </div>
    </div>
    {{ form.submit('Publish', 'publish', { class: 'btn btn-primary btn-block btn-rose' }) }}
{{ form.close()}}

</div>
</div>