{% extends 'master' %}

{% block content %}

{{ form.open({action: 'PostsController.store'}) }}

    {{ csrfField }}

    <fieldset class="form-group">
      {{ form.label('Post Title') }}
      {{ form.text('title', null, { class: 'form-control' }) }}
    </fieldset>

    <fieldset class="form-group">
      {{ form.label('Content') }}
      {{ form.textarea('content', null, { class: 'form-control' }) }}
    </fieldset>
    
    <fieldset class="form-group">
      {{ form.label('Youtube, Vimeo, Videos') }}
      {{ form.url('oembed', null, { class: 'form-control' }) }}
    </fieldset>

    <fieldset class="form-group">
      {{ form.label('Excerpt') }}
      {{ form.textarea('excerpt', null, { class: 'form-control' }) }}
    </fieldset>
 
  
    {{ form.submit('Publish', 'publish', { class: 'btn btn-primary btn-block btn-rose' }) }}
{{ form.close()}}





{% endblock %}