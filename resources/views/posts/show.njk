{% extends 'master' %}
{% yield userRole = currentUser.role().fetch() %}
{% block content %}

<div class="col-md-12">

                <!-- Blog Post -->
                {% if userRole.role === 'admin' %}
                <div class="togglebutton text-right">
                    <label>
                        STATUS
                    
                        <input type="checkbox" checked="true"><span class="toggle"></span>
                    </label>
                 </div>
                 {% endif %}
                <!-- Title -->
                <h1>{{post.title}}</h1>

        {{post|json}}

                <hr>

                <!-- Date/Time -->
                <p><span class="glyphicon glyphicon-time"></span> Posted on August 24, 2013 at 9:00 PM</p>

                <hr>
                {% if post.Oembed != null %}
                    {{post.Oembed| safe}}
                {% else %}
                <!-- Preview Image -->
                <img class="img-responsive" src="http://placehold.it/900x300" alt=""> <!-- oembed -->
                {% endif %}
                <hr>

                <!-- Post Content -->
                <p class="lead">{{post.content}} </p>
                <hr>

 <!-- DISQUS HERE -->




            </div>

{% endblock %}